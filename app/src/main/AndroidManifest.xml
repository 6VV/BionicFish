<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.lyyjy.yfyb.bionicfish"
          android:installLocation="preferExternal"
          tools:targetApi="froyo">

    <!-- 用户权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <!-- 使用蓝牙ble -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true"
        tools:targetApi="eclair"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".ContextUtil"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light"
        tools:targetApi="donut"
        android:fullBackupContent="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".Activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.SearchActivity"
            android:label="搜索设备"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator"/>
        <activity
            android:name=".Activity.HelperActivity.HelpActivity"
            android:label="帮助"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator"/>
        <activity
            android:name=".Activity.ProgramActivity"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator"/>
        <activity android:name=".Activity.SimulationActivity"
                  tools:ignore="InnerclassSeparator">
        </activity>
        <activity android:name=".Activity.UiProgramActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="landscape"
                  tools:ignore="InnerclassSeparator">
        </activity>
    </application>

</manifest>